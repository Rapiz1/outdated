#banner-text {
	text-align:center
  user-select: none
	height:100%
}
#banner-text h1 {
	font-size: 10em
	display: inline-block
	margin-bottom: auto
	transition: all ease 1s;
	cursor: pointer
}
#banner-text h1:hover {
	letter-spacing: 10px
	color: rgba(0,0,0, 0.8)
}
#banner-text h3 {
	font-weight: normal
}
