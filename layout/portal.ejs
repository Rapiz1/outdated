<style>
  .portal-main {
    max-width: 400px;
    margin: auto;
    padding: 50px;
  }
  .portal-main ul {
      list-style: none;
      display: -webkit-box;
      -webkit-box-orient: vertical;
    }
    .portal-main li{
      -webkit-box-flex: 1;
      height: 50px;
    }
  .portal-main li a:hover {
      color: lightgrey;
      background: grey;
    }
    .portal-main li a {
      color: grey;
      background: lightgrey;
      display: block;
      margin: auto;
      line-height: 50px;
      height: 50px;
      text-align: center;
      transition: background 0.5s;
    }
</style>
<div class="portal-main">
  <ul>
    <% for (name in site.data.portal) { %>
      <li><a href="<%= site.data.portal[name] %>" target="_blank"><%= name %></a></li>
    <% } %>
</ul>
</div>
